@model VacationManager.Models.AdditionalModels.CreateVacationModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h1>Create vacation</h1>
<div class="row">
    <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                        @Html.DisplayNameFor(model => model.HalfDayVacation)   <input class="form-check-input checkbox" asp-for="HalfDayVacation" />
                    </label>
            </div>
            <div class="form-group">
                <label asp-for="VacationOption" class="control-label"></label>
                <select asp-for="VacationOption" class="form-control" 
                asp-items="Html.GetEnumSelectList<VacationManager.Models.Enums.VacationOption>()">
                        <option disabled selected value=""> -- select an option -- </option>
                </select>
                <span asp-validation-for="VacationOption" class="text-danger"></span>
            </div>
                <div class="form-group">
                            <div class="active-form">
                                <label asp-for="Image"></label>
                                <input asp-for="Image" class="form-control" />
                            </div>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
            <div class="second-form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


</body>
</html>
