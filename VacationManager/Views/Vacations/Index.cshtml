@model IEnumerable<VacationManager.Models.Vacation>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestCreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HalfDayVacation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VacationOption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @string.Format($"{item.StartDate.ToString("dd/MM/yyyy")}")
            </td>
            <td>
                        @string.Format($"{item.EndDate.ToString("dd/MM/yyyy")}")
            </td>
            <td>
                        @string.Format($"{item.RequestCreationDate.ToString("dd/MM/yyyy")}")
            </td>
            <td>
                        <input class="form-check-input checkbox" asp-for="@item.HalfDayVacation" disabled />
            </td>
            <td>
                        <input class="form-check-input checkbox" asp-for="@item.Approved" disabled/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationOption)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
