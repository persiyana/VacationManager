@model IEnumerable<VacationManager.Models.Team>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="h1Button">
        <a asp-action="Create" class="btn">Create New</a>
        <h1>List of teams</h1>
    </div>
<table class="indexTable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Project
            </th>
            <th>
                Leader username
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.Project !=null )
                    {
                        @item.Project.Name
                       
                    }
                    else
                    {
                        <i>none</i>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leader.UserName)
            </td>
                    <td>
                                <a asp-action="Edit" class="indexButton blue" asp-route-id="@item.Id">Edit</a>
                                <a asp-action="Details" class="indexButton purple" asp-route-id="@item.Id">Details</a>
                                <a asp-action="Delete" class="indexButton pink" asp-route-id="@item.Id">Delete</a>
                    </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
