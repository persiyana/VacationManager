@model VacationManager.Models.AdditionalModels.AddUserToTeamModel;

@{
    ViewBag.Title = "Add user to team";
}

<h1>Change user team</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" disabled class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="TeamName" class="control-label"></label>
        <select asp-for="TeamName" asp-items="@ViewBag.Teams" name="teamId" class="form-control">
            <option disabled selected value=""> -- select an option -- </option>
        </select>
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>
    <a asp-action="Create" asp-controller="Teams">Create team</a>
    <div class="second-form-group row">
            <button type="submit" class="btn btn-primary" asp-route-email="@Model.Email">Update</button>
            <a asp-action="Index">Back to List</a>

    </div>
</form>