@model VacationManager.Models.AdditionalModels.EditRoleViewModel;

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit user role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Username" disabled class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="RoleName" class="control-label"></label>
        <select asp-for="RoleName" asp-items="@ViewBag.Roles" name="roleId" class="form-control">
            <option disabled selected value=""> -- select an option -- </option>
        </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="second-form-group">
            <button type="submit" class="btn btn-primary" asp-route-email="@Model.Email">Update</button>
            <a asp-action="Index">Back to List</a>
        
    </div>

</form>