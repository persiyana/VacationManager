@model VacationManager.Models.AdditionalModels.CeoIndexModel;


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Username
                </th>
                <th>
                    Role
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for(var i=0; i<Model.Users.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Users[i].UserName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => Model.UserRoles[i])
                    </td>

                    <td>
                        <a asp-action="EditRole" asp-route-userId="@Model.Users[i].Id">Edit</a> |
                        <a asp-action="AddUserToTeam" asp-route-userId="@Model.Users[i].Id">AddUserToTeam</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
