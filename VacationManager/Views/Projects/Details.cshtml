@model VacationManager.Models.Project



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
        <h1>Project</h1>
        <table class="detailsTable projectDetailsTable">
            <tr>
                <td>Name:</td>
                <td class="darker">@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>Description:</td>
                <td class="darker " id="both-sides-align">@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <td>Teams:</td>
                <td class="darker">
                    @if(Model.Teams.Count > 0)
                    {
                        foreach (var item in Model.Teams)
                        {
                            <p>	 @item.Name &diams;</p>
                        }
                    }
                    else
                    {
                        <i>none</i>
                    }

                </td>
            </tr>
        </table>
        <div class="detailsDiv">
            <a asp-action="Index" class="indexButton yellow" asp-controller="Teams">Add team to a project</a>
            <a asp-action="Edit" class="indexButton yellow" asp-route-id="@Model?.Id">Edit</a>
            <a asp-action="Delete" class="indexButton orange" asp-route-id="@Model?.Id">Delete</a>
            <br/>
            <a asp-action="Index">Back to List</a>
        </div>
   
</body>
</html>
