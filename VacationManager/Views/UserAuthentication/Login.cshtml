@model VacationManager.Models.AdditionalModels.LoginModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 center-block">
                <h3>Login</h3>
                <form asp-action="Login" method="post">

                    <div class="form-group" >
                        <label asp-for="Username"><b>Username</b></label>
                        <input type="text" asp-for="Username" class="form-control" placeholder="Enter Username">
                        <span asp-validation-for="Username" class="text-danger"></span>
                        

                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><b>Password</b></label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password" />
                        <div class="msg">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="msg">
                            <span class="text-danger">@TempData["msg"]</span>
                        </div>
                    }
                    <button type="submit" class="btn btn-info">Login</button>
                    <a class="text-alert" asp-action="Registration">Not a user? Signup</a>

                </form>
            </div>
        </div>
    </div>
</body>
</html>
