@model VacationManager.Models.AdditionalModels.LoginModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/css/userAuthentication.css">
</head>
<body>
    <div class="login-box">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div class="user-box">
                <input asp-for="Username" type="text" required>
                <label>Username</label>
                <span asp-validation-for="Username"></span>
            </div>
            <div class="user-box">
                <input asp-for="Password" type="password" required>
                <label>Password</label>
                <span asp-validation-for="Password"></span>
            </div>
            <button type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Login</button>
            <a asp-action="Registration">Not a user? Signup</a>
        </form>
    </div>
</body>
</html>
