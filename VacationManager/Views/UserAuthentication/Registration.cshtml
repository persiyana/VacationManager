@model VacationManager.Models.AdditionalModels.RegistrationModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link rel="stylesheet" type="text/css" href="~/css/userAuthentication.css">
    </head>
<body>
    <div class="login-box">
        <h2>Registration</h2>
           <form asp-action="Registration" method="post">
            <div class="user-box">
                <input asp-for="FirstName" type="text" required>
                <label>First name</label>
            </div>
            <div class="user-box">
                <input asp-for="LastName" type="text" required>
                <label>Last name</label>
            </div>
            <div class="user-box">
                <input asp-for="Email" type="text" required>
                <label>Email (unchangable)</label>
            </div>
            <div class="user-box">
                <input asp-for="Username" type="text" required>
                <label>Username (unchangable)</label>
            </div>
            <div class="user-box">
                <input asp-for="Password" type="password" required>
                <label>Password (eg. John@123)</label>
            </div>
            <div class="user-box">
                <input asp-for="PasswordConfirm" type="password" required>
                <label>Password confirm</label>
            </div>

            <button type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>Registration
            </button>
            <a asp-action="Login">Login</a>
        </form>
    </div>

</body>
</html>
